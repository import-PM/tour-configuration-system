<AnchorPane fx:id="backgroundAnchorPane" maxHeight="768.0" maxWidth="1366.0" prefHeight="768.0" prefWidth="1366.0" styleClass="background-section-main-linear" stylesheets="@../../../style/style-user-interface.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.importpm.controllers.TransportPageController">
    <children>
        <VBox fx:id="sidebarVBox" alignment="CENTER" layoutY="185.0" prefHeight="575.0" prefWidth="245.0" spacing="35.0">
            <children>
                <Button fx:id="buildTourButton" mnemonicParsing="false" onAction="#handleBuildtourButton" text="Button" />
                <Button fx:id="hotelButton" mnemonicParsing="false" onAction="#handleHotelButton" text="Button" />
                <Button fx:id="transportButton" mnemonicParsing="false" onAction="#handleTransportButton" text="Button" />
                <Button fx:id="tourListButton" mnemonicParsing="false" onAction="#handleTourListButton" text="Button" />
                <Pane fx:id="sideBarSpacePane" prefHeight="347.0" prefWidth="246.0" />
                <HBox fx:id="themeHBox" alignment="CENTER_LEFT" prefHeight="58.0" prefWidth="246.0" spacing="4.0">
                    <children>
                        <Pane fx:id="themeSpacePane" prefHeight="26.0" prefWidth="4.0" />
                        <Button fx:id="defaultTheme" minHeight="25.0" minWidth="25.0" mnemonicParsing="false" prefHeight="10.0" prefWidth="10.0" />
                        <Button fx:id="darkTheme" minHeight="25.0" minWidth="25.0" mnemonicParsing="false" prefHeight="10.0" prefWidth="10.0" />
                        <Button fx:id="hotpinkTheme" alignment="TOP_LEFT" minHeight="25.0" minWidth="25.0" mnemonicParsing="false" prefHeight="10.0" prefWidth="10.0" />
                        <Button fx:id="blueSkyTheme" minHeight="25.0" minWidth="25.0" mnemonicParsing="false" prefHeight="10.0" prefWidth="10.0" />
                    </children>
                </HBox>
                <Button fx:id="exitButton" mnemonicParsing="false" onAction="#handleExitButton" text="exit">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </VBox>
        <ImageView fx:id="icon" fitHeight="97.0" fitWidth="126.0" layoutX="55.0" layoutY="39.0" pickOnBounds="true" preserveRatio="true" />
        <AnchorPane fx:id="fieldPane" layoutX="245.0" layoutY="34.0" prefHeight="700.0" prefWidth="1100.0" style="-fx-background-color: #ffffff;">
         <children>
            <Label fx:id="headerLabel" layoutX="20.0" layoutY="20.0" styleClass="header" text="การเดินทาง">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
            <Label fx:id="transportTypeLabel" layoutX="456.0" layoutY="78.0" styleClass="title-color-on-page" text="ประเภทของยานพาหนะ">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <ScrollPane fx:id="transportScrollPane" layoutX="50.0" layoutY="120.0" prefHeight="480.0" prefWidth="1000.0">
               <content>
                  <GridPane fx:id="transportGridPane" prefHeight="50.0" prefWidth="990.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                  </GridPane>
               </content>
            </ScrollPane>
            <Button fx:id="cancelButton" layoutX="50.0" layoutY="636.0" mnemonicParsing="false" onAction="#handleCancelButton" text="Cancel" />
            <Button fx:id="acceptButton" layoutX="998.0" layoutY="636.0" mnemonicParsing="false" onAction="#handleAcceptButton" text="Done" />
         </children></AnchorPane>
    </children>
</AnchorPane>
